<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/light_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Jasność:"
                android:textAlignment="center"
                android:textDirection="firstStrongRtl"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/LightNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="34sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ProgressBar
            android:id="@+id/pBar"
        android:max = "40000"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="?android:attr/progressBarStyleHorizontal"/>
    </LinearLayout>

    <LinearLayout
            android:background="@color/purple_200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Współrzędne:"
                android:textAlignment="center"
                android:textDirection="firstStrongRtl"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/LocationNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""
                android:textAlignment="center"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/PresureButton"
                android:theme="@style/Button.Red"
                android:shadowColor="@color/light_red"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="pokaż ciśnienie" />

            <Button
                android:id="@+id/HumilityButton"
                android:theme="@style/Button.Red"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="pokaż wilgotność" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/RotateSqu"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:background="#ADD8E6"
            android:gravity="center"
            android:text="Rotate"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>